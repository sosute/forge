{
  "name": "html-semantic-checker",
  "version": "1.0.0",
  "description": "HTML Semantic Checker Chrome Extension",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist && rm -f content-script.js",
    "deploy": "npm run build && cp dist/content-script.js ./content-script.js",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint:check && npm run format:check && npm run build"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "webpack": "^5.101.2",
    "webpack-cli": "^5.1.4",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0"
  }
}
