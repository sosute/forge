{
  "manifest_version": 3,
  "name": "Marui HTML Checker",
  "version": "1.0.0",
  "description": "HTMLのセマンティック構造・アクセシビリティ・SEOの問題を検知し、改善提案を行います",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content-script.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  
  "action": {
    "default_title": "Marui HTML Checker - クリックで検証開始"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}